{% extends 'base.html.twig' %}

{% block title %}All programs
{% endblock %}

{% block body %}
	<h1>Liste des catégories : <a href="{{ path('category_new') }}">Create new</a></h1></h1>

	{% for category in categories %}
		<div>
			<h2>{{ loop.index }}/{{ category.name }}

				<a href="{{ path("category_show", { categoryName: category.name }) }}">Voir la fiche</a>
			</div>
		{% else %}
			Aucune catégorie trouvée.
		{% endfor %}

		<a href="{{ path('app_index') }}">
			Retour à l'accueil
		</a>
	{% endblock %}
