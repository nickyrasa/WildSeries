{% extends 'base.html.twig' %}


{% block body %}
	<div class="media">
		<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>Synopsis de la série :
				<br>{{ program.synopsis }}</p>
			<p>Catégorie de la série :{{ category.name }}</p>
			<p>numéro de la saison :
				{{season.number}}</p>


			<div class="container-fluid text-center">
				{% for episode in episodes %}
					<div class="row">
						<div class=".g-col-6 .g-col-md-4">
							<p>{{ episode.title }}</p>
							{{ episode.synopsis }}<br>
							<a href="{{ path("program_show_episode", { programId: program.id, seasonId: season.id, episodeId: episode.id }) }}">Voir l'épisode
							</a><br><br>

							<strong>Episode{{ episode.number }}</strong>
							
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>


	<a href="{{ path('program_index') }}">
		Retour à la liste des programmes
	</a>
{% endblock %}
